    "module": "commonjs",
    "lib": ["es5", "scripthost"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "baseUrl": ".",
